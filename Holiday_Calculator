# SCOPE
def adding(a, b):
    total = a + b
    return (description + str(total))
x= 2
y= 3
description = "Total: "
sum = adding(x, y)
print(sum)


# DEFAULT VALUES

def multiply(num1,num2=5):
    total = num1 * num2
    print(f"{num1} * {num2} = {total}")
times_5 = multiply(6)

# change the value of num2
def multiply(num1,num2 = 5):
    total = num1 * num2
    print(f"{num1} * {num2} = {total}")
times_7 = multiply(6, 7)
# call the function using keyword arguments
times_9 = multiply(num2=6, num1=9)
